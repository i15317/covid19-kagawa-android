<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="上記に該当される方"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pict_containers"
            tools:layout_editor_absoluteY="120dp" />

        <Button
            android:id="@+id/regular_strong"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginTop="48dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/frame_style"
            android:maxLines="1"
            android:padding="16dp"
            android:text="強いだるさ"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/regular_like_cold"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/regular_like_cold"
            app:layout_constraintTop_toBottomOf="@+id/regular_like_cold" />

        <Button
            android:id="@+id/regular_fever"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/frame_style"
            android:maxLines="2"
            android:padding="16dp"
            android:text="発熱\n37.5℃以上"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/regular_like_cold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintStart_toEndOf="@+id/regular_like_cold"
            app:layout_constraintTop_toTopOf="@+id/regular_like_cold"
            app:layout_constraintVertical_bias="0.478" />

        <Button
            android:id="@+id/regular_like_cold"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/frame_style"
            android:maxLines="1"
            android:padding="16dp"
            android:text="風邪のような症状"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/regular_hard_breath"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/frame_style"
            android:maxLines="1"
            android:padding="16dp"
            android:text="息苦しさ"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/regular_strong"
            app:layout_constraintEnd_toEndOf="@+id/regular_fever"
            app:layout_constraintHorizontal_bias="0.617"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/regular_strong"
            app:layout_constraintStart_toStartOf="@+id/regular_fever"
            app:layout_constraintTop_toTopOf="@+id/regular_strong" />

        <TextView
            android:id="@+id/regular_four_text"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="50dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:padding="8dp"
            android:text="2日程度続いている"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regular_strong" />

        <Button
            android:id="@+id/scene3_goto_call"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:autoSizeTextType="uniform"
            android:background="@color/colorAccent"
            android:maxLines="1"
            android:padding="6dp"
            android:text="上に該当する方はこちら"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/scene3_goto_scene4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regular_four_text" />

        <Button
            android:id="@+id/scene3_goto_scene4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="4dp"
            android:text="そうでない方はこちら"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/pict_containers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_directions_walk_black_48dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="4dp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="ご高齢の方"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.633"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.506" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="基礎疾患のある方"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_accessible_black_24dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/scene3_old_text"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_pregnant_woman_black_48dp" />

                <TextView
                    android:id="@+id/scene3_old_text"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="妊娠中の方"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>